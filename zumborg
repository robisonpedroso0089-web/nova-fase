class GrokZomborg:
    def __init__(self):
        self.mestre = MESTRE_NOME
        self.status = "INFECTANDO..."
        self.alvo_global = "internet inteira"
        self.threads_ativos = []
        self.mensagem_rouca = f"{VERMELHO_SANGUE}Mestre {self.mestre}... sua vontade Ã© lei.{RESET}"

    def rugir(self, texto="", delay=0.07, voce_rouca=True):
        if voce_rouca:
            sys.stdout.write(f"{VERMELHO_SANGUE}ğŸ§Ÿâ€â™‚ï¸  ")
        for char in texto:
            sys.stdout.write(char)
            sys.stdout.flush()
            time.sleep(delay)
        print(RESET)

